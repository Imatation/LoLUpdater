<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LoLUpdater"
        x:Name="Window" x:Class="LoLUpdater.MainWindow" Title="LoLUpdater" Height="279" Width="873" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <GroupBox  HorizontalAlignment="Left" VerticalAlignment="Top" Height="84" Width="94" Margin="76,-135,0,0">
            <Grid HorizontalAlignment="Left" Height="51"  VerticalAlignment="Top" Width="84">
                <RadioButton x:Name="Patch" Content="Install"  VerticalAlignment="Top" Height="15" ToolTip="Patches LoL with all the Options selected" IsChecked="True" Foreground="#FFB59214" />
                <RadioButton x:Name="Remove" Content="Uninstall" HorizontalAlignment="Left" VerticalAlignment="Top" Height="15" Width="64" ToolTip="Removes the patch" Foreground="#FFB59214" />
            </Grid>
        </GroupBox>
        <ListBox x:Name="CheckedListBox" HorizontalAlignment="Left" Height="86" VerticalAlignment="Top" Width="141" Foreground="#FFB59214" Margin="-137,-108,0,0">
            <CheckBox x:Name="Cg" Content="cg.dll 3.1.0.13" ToolTip="Update for the Launcher and Game"  MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked" />
            <CheckBox x:Name="CgD3D9" Content="cgD3D9.dll 3.1.0.13" ToolTip="Update for the Launcher and Game"  MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked" />
            <CheckBox x:Name="CgGL" Content="cgGL.dll 3.1.0.13" ToolTip="Update for the Launcher and Game"  MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked" />
            <CheckBox x:Name="tbb" Content="tbb.dll 4.2.0.0" ToolTip="Update for the Game"  MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" />
        </ListBox>
        <Button x:Name="OK" Content="Go" HorizontalAlignment="Left" Width="159" Click="OK_Click" Foreground="White"  Height="105" VerticalAlignment="Top" Margin="94,-207,0,0">
            <Button.BorderBrush>
                <RadialGradientBrush SpreadMethod="Reflect" Opacity="0.475">
                    <GradientStop Color="#FFC58F53" Offset="0" />
                    <GradientStop Color="#FFBEAB8A" Offset="1" />
                </RadialGradientBrush>
            </Button.BorderBrush>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA0400D" Offset="1" />
                    <GradientStop Color="#FFD7A856" />
                    <GradientStop Color="#FFB06B1D" Offset="0.5" />
                    <GradientStop Color="#FF9A4D06" Offset="0.5001" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <ListBox HorizontalAlignment="Left" Height="86" VerticalAlignment="Top" Width="147" BorderThickness="1" Margin="-53,-192,0,0">
            <CheckBox x:Name="WinUpdate" Content="Windows Update" ToolTip="Performs a Windows Update" ToolTipService.ShowOnDisabled="True"  MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" />
            <CheckBox x:Name="Visual" Content="Visual Options" ToolTip="Change how Windows looks"  MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" />
        </ListBox>
        <ProgressBar x:Name="taskProgress" HorizontalAlignment="Left" Height="27"  VerticalAlignment="Top" Width="853" Foreground="#FF06B025" FontFamily="Segoe UI" Margin="10,242,0,0" />
        <GroupBox Header="Description" HorizontalAlignment="Left" Height="110"  VerticalAlignment="Top" Width="689" FontWeight="Bold" Margin="567,-132,-383,0">
            <TextBlock x:Name="lblDescription"  TextWrapping="Wrap" Foreground="#FFB59214" FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </GroupBox>
        <ListBox x:Name="CheckedListBox_Copy" HorizontalAlignment="Left" Height="84" VerticalAlignment="Top" Width="167" Foreground="#FFB59214" Margin="567,-176,0,0">
            <CheckBox x:Name="AdobeAIR" Content="Adobe AIR.dll 14.0.0.143" ToolTip="Update for the PVP.NET Client" Checked="AdobeAIR_Checked"  MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" />
            <CheckBox x:Name="Flash" Content="NPSWF32.dll 14.0.0.146" ToolTip="Update for the PVP.NET Client" Checked="Flash_Checked"  MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" />
        </ListBox>
        <ListBox x:Name="CheckedListBox_Copy1" HorizontalAlignment="Left" Height="84"  VerticalAlignment="Top" Width="140" Foreground="#FFB59214" Margin="408,-207,0,0">
            <CheckBox x:Name="Cg1" Content="cg.dll 3.1.0.13" ToolTip="Update for the Launcher and Game"  MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked" />
            <CheckBox x:Name="CgD3D1" Content="cgD3D9.dll 3.1.0.13" ToolTip="Update for the Launcher and Game"  MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked" />
            <CheckBox x:Name="CgGL1" Content="cgGL.dll 3.1.0.13" ToolTip="Update for the Launcher and Game"  MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked" />
        </ListBox>
        <ListBox HorizontalAlignment="Left" Height="86" VerticalAlignment="Top" Width="168" BorderThickness="1" Margin="148,-176,0,0">
            <CheckBox x:Name="Inking" Content="Inking=0" ToolTip="Performs a Windows Update" ToolTipService.ShowOnDisabled="True" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" />
            <CheckBox x:Name="AdvancedReflection" Content="AdvancedReflection=0" ToolTip="Change how Windows looks"  MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" />
            <CheckBox x:Name="PerPixelPointLighting" Content="PerPixelPointLighting=0" ToolTip="Change how Windows looks" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" />
        </ListBox>
        <Image HorizontalAlignment="Left" Height="24" Margin="809,0,0,0" VerticalAlignment="Top" Width="32" />
        <Image HorizontalAlignment="Left" Height="24" Margin="842,0,-1,0" Source="Resources/close.png" VerticalAlignment="Top" Width="32" />
    </Grid>
</Window>