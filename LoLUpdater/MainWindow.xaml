<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:LoLUpdater" mc:Ignorable="d" x:Name="Window" x:Class="LoLUpdater.MainWindow" Title="LoLUpdater" Height="310" Width="739" ResizeMode="NoResize" Background="#FF0A1A34" Icon="LoLUpdater.ico">
    <Grid Margin="0,0,4,1" Background="#FF0A1A34">
        <GroupBox Header="" HorizontalAlignment="Left" VerticalAlignment="Top" Height="95" Width="94" Margin="10,24,0,0">
            <Grid HorizontalAlignment="Left" Height="86" Margin="0,0,-2,-2.96" VerticalAlignment="Top" Width="84">
                <RadioButton x:Name="Patch" Content="Install" Margin="10,10,20,0" VerticalAlignment="Top" Height="15" ToolTip="Patches LoL with all the options" IsChecked="True" Foreground="#FFB59214"/>
                <RadioButton x:Name="Remove" Content="Uninstall" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Height="15" Width="64" ToolTip="Removes the patch" Foreground="#FFB59214"/>
            </Grid>
        </GroupBox>
        <ListBox x:Name="CheckedListBox" HorizontalAlignment="Left" Height="84" Margin="107,35,0,0" VerticalAlignment="Top" Width="325" Foreground="#FFB59214">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <CheckBox x:Name="AdobeAIR" Content="Adobe AIR.dll 14.0.0.143" ToolTip="Update for the PVP.NET Client" Checked="AdobeAIR_Checked" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
            <CheckBox x:Name="Flash" Content="NPSWF32.dll 14.0.0.146" ToolTip="Update for the PVP.NET Client" Checked="Flash_Checked" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
            <CheckBox x:Name="Cg" Content="cg.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
            <CheckBox x:Name="CgD3D9" Content="cgD3D9.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
            <CheckBox x:Name="CgGL" Content="cgGL.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
            <CheckBox x:Name="tbb" Content="tbb.dll 4.2.0.0" ToolTip="Update for the Game" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
        </ListBox>
        <Button x:Name="OK" Content="Go" HorizontalAlignment="Left" Margin="597,98,0,0" Width="46" Click="OK_Click" Foreground="White" BorderThickness="19,12,15,2" d:IsEffectDisabled="True" Height="31" VerticalAlignment="Top">
            <Button.BorderBrush>
                <RadialGradientBrush SpreadMethod="Reflect" Opacity="0.475">
                    <GradientStop Color="#FFC58F53" Offset="0"/>
                    <GradientStop Color="#FFBEAB8A" Offset="1"/>
                </RadialGradientBrush>
            </Button.BorderBrush>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA0400D" Offset="1"/>
                    <GradientStop Color="#FFD7A856"/>
                    <GradientStop Color="#FFB06B1D" Offset="0.5"/>
                    <GradientStop Color="#FF9A4D06" Offset="0.5001"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <ListBox HorizontalAlignment="Left" Height="84" VerticalAlignment="Top" Width="147" Margin="437,35,0,0">
            <CheckBox x:Name="WinUpdate" Content="Windows Update" ToolTip="Performs a Windows Update" ToolTipService.ShowOnDisabled="True" Foreground="#FFB59214" Background="#FF38549E" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
            <CheckBox x:Name="Clean" Content="Clean HDD" ToolTip="Cleans the hardrive from temporary garbage files" Foreground="#FFB59214" Background="#FF38549E" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
            <CheckBox x:Name="Visual" Content="Visual Options" ToolTip="Change how Windows looks" Foreground="#FFB59214" Background="#FF38549E" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
            <CheckBox x:Name="MouseHz_" Content="MouseHz+" ToolTip="Increases mouseHz to 500Hz, for a smoother mouse" ToolTipService.ShowOnDisabled="True" Foreground="#FFB59214" Background="#FF38549E" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
        </ListBox>
        <Label x:Name="Label" Content="" HorizontalAlignment="Left" Margin="632,67.05,0,0" VerticalAlignment="Top" Width="31" RenderTransformOrigin="4.194,0.538" Background="#FF0A1A34" Foreground="#FFB59214"/>
        <ComboBox HorizontalAlignment="Left" Margin="597,40,0,0" VerticalAlignment="Top" Width="119.5" ToolTip="Select your server" SelectedIndex="1" SelectionChanged="ComboBox_SelectionChanged" Style="{DynamicResource Experimental_ComboBox}">
            <ComboBoxItem x:Name="EUW" Content="EUW" />
            <ComboBoxItem x:Name="NA" Content="NA" />
        </ComboBox>
        <Label x:Name="Label_Copy" Content="Ping:" HorizontalAlignment="Left" Margin="596,67.05,0,0" VerticalAlignment="Top" Width="35" Background="#FF0A1A34" Foreground="#FFB59214"/>
        <Label Content="Game Options" HorizontalAlignment="Left" Height="30" Margin="115,8,0,0" VerticalAlignment="Top" Width="129" Foreground="#FFB59214" FontWeight="Bold"/>
        <Label Content="Windows Utilities" HorizontalAlignment="Left" Height="26" Margin="446,9,0,0" VerticalAlignment="Top" Width="110" Foreground="#FFB59214" FontWeight="Bold"/>
        <Label Content="Main" HorizontalAlignment="Left" Height="30" Margin="19,8,0,0" VerticalAlignment="Top" Width="48" Foreground="#FFB59214" FontWeight="Bold"/>
        <Label Content="Server" HorizontalAlignment="Left" Height="25" Margin="594,10,0,0" VerticalAlignment="Top" Width="88" Foreground="#FFB59214" FontWeight="Bold"/>
        <ProgressBar x:Name="taskProgress" HorizontalAlignment="Left" Height="22" Margin="8,249,0,0" VerticalAlignment="Top" Width="706" Foreground="#FF06B025" FontFamily="Segoe UI"/>
        <GroupBox Header="Description" HorizontalAlignment="Left" Height="110" Margin="10,134,0,0" VerticalAlignment="Top" Width="706" FontWeight="Bold">
        	<TextBlock x:Name="lblDescription" Margin="10,4.24,-2,2.415" TextWrapping="Wrap" Foreground="#FFB59214" FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </GroupBox>
        <Button x:Name="btnOptions" Content="Options" HorizontalAlignment="Left" Margin="648,98,0,0" Width="66" Foreground="White" BorderThickness="19,12,15,2" d:IsEffectDisabled="True" Height="31" VerticalAlignment="Top" Click="btnOptions_Click">
            <Button.BorderBrush>
                <RadialGradientBrush SpreadMethod="Reflect" Opacity="0.475">
                    <GradientStop Color="#FFC58F53" Offset="0"/>
                    <GradientStop Color="#FFBEAB8A" Offset="1"/>
                </RadialGradientBrush>
            </Button.BorderBrush>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA0400D" Offset="1"/>
                    <GradientStop Color="#FFD7A856"/>
                    <GradientStop Color="#FFB06B1D" Offset="0.5"/>
                    <GradientStop Color="#FF9A4D06" Offset="0.5001"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>