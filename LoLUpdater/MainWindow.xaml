<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:LoLUpdater" mc:Ignorable="d" x:Name="Window" x:Class="LoLUpdater.MainWindow" Title="LoLUpdater" Height="279" Width="873" ResizeMode="NoResize" Background="#FF0A1A34" Icon="LoLUpdater.ico" WindowStyle="ToolWindow" SizeToContent="WidthAndHeight">
    <Grid Margin="0,0,4,1" Background="#FF0A1A34">
        <GroupBox  HorizontalAlignment="Left" VerticalAlignment="Top" Height="84" Width="94" Margin="0,22,0,0">
            <Grid HorizontalAlignment="Left" Height="51" Margin="0,-18,-2,-7" VerticalAlignment="Top" Width="84">
                <RadioButton x:Name="Patch" Content="Install" Margin="10,19,20,0" VerticalAlignment="Top" Height="15" ToolTip="Patches LoL with all the Options selected" IsChecked="True" Foreground="#FFB59214"/>
                <RadioButton x:Name="Remove" Content="Uninstall" HorizontalAlignment="Left" Margin="10,39,0,-3" VerticalAlignment="Top" Height="15" Width="64" ToolTip="Removes the patch" Foreground="#FFB59214"/>
            </Grid>
        </GroupBox>
        <ListBox x:Name="CheckedListBox" HorizontalAlignment="Left" Height="86" Margin="261,20,0,0" VerticalAlignment="Top" Width="141" Foreground="#FFB59214">
            <CheckBox x:Name="Cg" Content="cg.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked"/>
            <CheckBox x:Name="CgD3D9" Content="cgD3D9.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked"/>
            <CheckBox x:Name="CgGL" Content="cgGL.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked"/>
            <CheckBox x:Name="tbb" Content="tbb.dll 4.2.0.0" ToolTip="Update for the Game" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
        </ListBox>
        <Button x:Name="OK" Content="Go" HorizontalAlignment="Left" Margin="694,111,0,0" Width="159" Click="OK_Click" Foreground="White" BorderThickness="19,12,15,2" d:IsEffectDisabled="True" Height="105" VerticalAlignment="Top">
            <Button.BorderBrush>
                <RadialGradientBrush SpreadMethod="Reflect" Opacity="0.475">
                    <GradientStop Color="#FFC58F53" Offset="0"/>
                    <GradientStop Color="#FFBEAB8A" Offset="1"/>
                </RadialGradientBrush>
            </Button.BorderBrush>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA0400D" Offset="1"/>
                    <GradientStop Color="#FFD7A856"/>
                    <GradientStop Color="#FFB06B1D" Offset="0.5"/>
                    <GradientStop Color="#FF9A4D06" Offset="0.5001"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <ListBox HorizontalAlignment="Left" Height="86" VerticalAlignment="Top" Width="147" Margin="542,20,0,0" BorderThickness="1">
            <CheckBox x:Name="WinUpdate" Content="Windows Update" ToolTip="Performs a Windows Update" ToolTipService.ShowOnDisabled="True" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
            <CheckBox x:Name="Visual" Content="Visual Options" ToolTip="Change how Windows looks" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
        </ListBox>
        <Label Content="Air Client Options" HorizontalAlignment="Left" Height="30" Margin="94,-1,0,0" VerticalAlignment="Top" Width="129" Foreground="#FFB59214" FontWeight="Bold"/>
        <Label Content="Windows Utilities" HorizontalAlignment="Left" Height="26" Margin="542,-1,0,0" VerticalAlignment="Top" Width="110" Foreground="#FFB59214" FontWeight="Bold"/>
        <Label Content="Main" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="48" Foreground="#FFB59214" FontWeight="Bold" Margin="0,-1,0,0"/>
        <ProgressBar x:Name="taskProgress" HorizontalAlignment="Left" Height="22" Margin="0,221,0,0" VerticalAlignment="Top" Width="857" Foreground="#FF06B025" FontFamily="Segoe UI"/>
        <GroupBox Header="Description" HorizontalAlignment="Left" Height="110" Margin="0,106,0,0" VerticalAlignment="Top" Width="689" FontWeight="Bold">
            <TextBlock x:Name="lblDescription" Margin="10,4.24,-2,2.415" TextWrapping="Wrap" Foreground="#FFB59214" FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </GroupBox>
        <ListBox x:Name="CheckedListBox_Copy" HorizontalAlignment="Left" Height="84" Margin="94,22,0,0" VerticalAlignment="Top" Width="167" Foreground="#FFB59214">
            <CheckBox x:Name="AdobeAIR" Content="Adobe AIR.dll 14.0.0.143" ToolTip="Update for the PVP.NET Client" Checked="AdobeAIR_Checked" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
            <CheckBox x:Name="Flash" Content="NPSWF32.dll 14.0.0.146" ToolTip="Update for the PVP.NET Client" Checked="Flash_Checked" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
        </ListBox>
        <Label Content="Game Client Options" HorizontalAlignment="Left" Height="30" Margin="266,-1,0,0" VerticalAlignment="Top" Width="129" Foreground="#FFB59214" FontWeight="Bold"/>
        <ListBox x:Name="CheckedListBox_Copy1" HorizontalAlignment="Left" Height="84" Margin="402,22,0,0" VerticalAlignment="Top" Width="140" Foreground="#FFB59214">
            <CheckBox x:Name="Cg1" Content="cg.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked"/>
            <CheckBox x:Name="CgD3D1" Content="cgD3D9.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked"/>
            <CheckBox x:Name="CgGL1" Content="cgGL.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked"/>
        </ListBox>
        <Label Name="Launcher" Content="Launcher Options" HorizontalAlignment="Left" Height="30" Margin="402,-1,0,0" VerticalAlignment="Top" Width="129" Foreground="#FFB59214" FontWeight="Bold"/>
        <Label Content="Config Tweaks" HorizontalAlignment="Left" Height="26" Margin="689,0,0,0" VerticalAlignment="Top" Width="110" Foreground="#FFB59214" FontWeight="Bold"/>
        <ListBox HorizontalAlignment="Left" Height="86" VerticalAlignment="Top" Width="168" Margin="689,20,0,0" BorderThickness="1">
            <CheckBox x:Name="Inking" Content="Inking=0" ToolTip="Performs a Windows Update" ToolTipService.ShowOnDisabled="True" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
            <CheckBox x:Name="AdvancedReflection" Content="AdvancedReflection=0" ToolTip="Change how Windows looks" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
            <CheckBox x:Name="PerPixelPointLighting" Content="PerPixelPointLighting=0" ToolTip="Change how Windows looks" Foreground="#FFB59214" Background="#FF0A5593" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"/>
        </ListBox>
    </Grid>
</Window>