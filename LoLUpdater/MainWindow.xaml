<controls:MetroWindow

    x:Class="LoLUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.AeroLite"

        Title="LoLUpdater" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" ShowTitleBar="false" WindowTransitionsEnabled="False" ShowCloseButton="False" GlowBrush="#9B9FB9" FontFamily="Open Sans" Foreground="White">

    <Grid Background="#2D2D30">
        <Image Name="Xclose" HorizontalAlignment="Left" Height="26" Margin="734,0,0,0" Source="Resources/close.png" VerticalAlignment="Top" Width="34" MouseEnter="Image_MouseEnter" MouseLeave="Image_MouseLeave" />
        <Image Name="Xminimize" HorizontalAlignment="Left" Height="26" Margin="700,0,0,0" Source="Resources/minimize.png" VerticalAlignment="Top" Width="34" MouseEnter="Image_MouseEnter_1" MouseLeave="Image_MouseLeave_1" />
        <RadioButton Name="Remove" Content="Uninstall" HorizontalAlignment="Left" Margin="15,53,0,0" VerticalAlignment="Top" FontFamily="Open Sans" Foreground="White" />
        <RadioButton Name="Patch" Content="Install" HorizontalAlignment="Left" Margin="15,38,0,0" VerticalAlignment="Top" FontFamily="Open Sans" Foreground="White" />
        <GroupBox Header="Main" HorizontalAlignment="Left" Margin="10,24,0,0" VerticalAlignment="Top" Height="53" Width="105" FontFamily="Open Sans" Foreground="White" />
        <ListBox HorizontalAlignment="Left" Height="44" Margin="118,38,0,0" VerticalAlignment="Top" Width="105" Background="#2D2D30">
            <CheckBox Name="AdobeAIR" Content="Adobe AIR" FontFamily="Open Sans" Foreground="White" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Flash_Checked" />
            <CheckBox Name="Flash" Content="Adobe Flash" FontFamily="Open Sans" Foreground="White" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="AdobeAIR_Checked" />
        </ListBox>
        <GroupBox Header="PvP.Net Options" HorizontalAlignment="Left" Margin="116,24,0,0" VerticalAlignment="Top" Height="60" Width="109" FontFamily="Open Sans" Foreground="White" />
        <GroupBox Header="Game Options" HorizontalAlignment="Left" Margin="226,24,0,0" VerticalAlignment="Top" Height="96" Width="100" FontFamily="Open Sans" Foreground="White" />
        <ListBox HorizontalAlignment="Left" Height="61" Margin="328,38,0,0" VerticalAlignment="Top" Width="114" Background="#2D2D30">
            <CheckBox Name="Cg1" Content="Cg" FontFamily="Open Sans" Foreground="White" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked" />
            <CheckBox Name="CgD3D1" Content="CgD3D9" FontFamily="Open Sans" Foreground="White" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked" />
            <CheckBox Name="CgGL1" Content="CgGL" FontFamily="Open Sans" Foreground="White" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit"  Checked="Cg_Checked" />
        </ListBox>
        <ListBox HorizontalAlignment="Left" Height="80" Margin="228,38,0,0" VerticalAlignment="Top" Width="95" Background="#2D2D30">
            <CheckBox Name="Cg" Content="Cg" FontFamily="Open Sans" Foreground="White" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked" />
            <CheckBox Name="CgD3D9" Content="CgD3D9" FontFamily="Open Sans" Foreground="White" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked" />
            <CheckBox Name="CgGL" Content="CgGL" FontFamily="Open Sans" Foreground="White" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" Checked="Cg_Checked" />
            <CheckBox Name="tbb" Content="TBB" FontFamily="Open Sans" Foreground="White" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" />
        </ListBox>
        <GroupBox Header="Windows Utilities" HorizontalAlignment="Left" Margin="446,24,0,0" VerticalAlignment="Top" Height="58" Width="132" FontFamily="Open Sans" Foreground="White" />
        <GroupBox Header="Launcher Options" HorizontalAlignment="Left" Margin="327,24,0,0" VerticalAlignment="Top" Height="77" Width="118" FontFamily="Open Sans" Foreground="White" />
        <ListBox HorizontalAlignment="Left" Height="42" Margin="448,38,0,0" VerticalAlignment="Top" Width="128" Background="#2D2D30">
            <CheckBox Name="WinUpdate" Content="Windows Update" FontFamily="Open Sans" Foreground="White" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" />
            <CheckBox Name="Visual" Content="Visual Options" FontFamily="Open Sans" Foreground="White" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" />
        </ListBox>
        <GroupBox Header="Windows Utilities" HorizontalAlignment="Left" Margin="579,24,0,0" VerticalAlignment="Top" Height="77" Width="182" FontFamily="Open Sans" />
        <ListBox HorizontalAlignment="Left" Height="61" VerticalAlignment="Top" Width="178" Margin="581,38,0,0" Background="#2D2D30">
            <CheckBox Name="Inking" Content="No Inking" FontFamily="Open Sans" Foreground="White" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" />
            <CheckBox Name="AdvancedReflection" Content="No Advanced Reflection" FontFamily="Open Sans" Foreground="White" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" />
            <CheckBox Name="PerPixelPointLighting" Content="No PerPixelPointLightning" FontFamily="Open Sans" Foreground="White" MouseEnter="chkOption_MouseEnter" MouseLeave="chkOption_MouseExit" />
        </ListBox>
        <GroupBox Header="Desciption" HorizontalAlignment="Left" Margin="10,123,0,0" VerticalAlignment="Top" Height="100" Width="748" FontFamily="Open Sans">
            <TextBlock Foreground="White" Name="lblDescription" HorizontalAlignment="Left" Margin="10,32,-2,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="728" />
        </GroupBox>
        <Button Background="#2D2D30" Foreground="White" Content="Go" HorizontalAlignment="Left" Margin="10,228,0,0" VerticalAlignment="Top" Width="748" FontFamily="Open Sans" Click="OK_Click" />
        <TextBlock HorizontalAlignment="Left" Margin="10,8,0,0" TextWrapping="Wrap" Text="LoLUpdater" VerticalAlignment="Top" Foreground="Gray" />
    </Grid>
</controls:MetroWindow>