<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Name="Window" x:Class="LoLUpdater.MainWindow" Title="LoLUpdater" Height="164" Width="739" ResizeMode="NoResize" Background="#FF0A1A34">
    <Grid Margin="0,0,4,1" Background="#FF0A1A34">
        <GroupBox Header="Main" HorizontalAlignment="Left" VerticalAlignment="Top" Height="106" Width="94" Margin="5,13,0,0">
        	<Grid HorizontalAlignment="Left" Height="86" Margin="0,0,-2,-2.96" VerticalAlignment="Top" Width="84">
        		<RadioButton x:Name="Patch" Content="Install" Margin="10,10,20,0" VerticalAlignment="Top" Height="15" ToolTip="Patches LoL with all the options" IsChecked="True" Foreground="#FFB59214"/>
        		<RadioButton x:Name="Remove" Content="Uninstall" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Height="15" Width="64" ToolTip="Removes the patch" Foreground="#FFB59214"/>
        	</Grid>
        </GroupBox>
        <ListBox x:Name="CheckedListBox" HorizontalAlignment="Left" Height="106" Margin="104,13,0,0" VerticalAlignment="Top" Width="325" Foreground="#FFB59214">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <CheckBox x:Name="AdobeAIR" Content="Adobe AIR.dll 14.0.0.125" ToolTip="Update for the PVP.NET Client" Checked="AdobeAIR_Checked" Foreground="#FFB59214" Background="#FF0A5593"/>
            <CheckBox x:Name="Flash" Content="NPSWF32.dll 14.0.0.137" ToolTip="Update for the PVP.NET Client" Checked="Flash_Checked" Foreground="#FFB59214" Background="#FF0A5593"/>
            <CheckBox x:Name="Cg" Content="cg.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Foreground="#FFB59214" Background="#FF0A5593"/>
            <CheckBox x:Name="CgD3D9" Content="cgD3D9.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Foreground="#FFB59214" Background="#FF0A5593"/>
            <CheckBox x:Name="CgGL" Content="cgGL.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Foreground="#FFB59214" Background="#FF0A5593"/>
            <CheckBox x:Name="tbb" Content="tbb.dll 4.2.0.0" ToolTip="Update for the Game" Foreground="#FFB59214" Background="#FF0A5593"/>
        </ListBox>
        <Button x:Name="OK" Content="OK" HorizontalAlignment="Left" Margin="593.5,88,0,0" Width="120.5" Click="OK_Click" Foreground="White" BorderThickness="19,12,15,2" d:IsEffectDisabled="True" Height="31" VerticalAlignment="Top">
            <Button.BorderBrush>
                <RadialGradientBrush SpreadMethod="Reflect" Opacity="0.475">
                    <GradientStop Color="#FFC58F53" Offset="0"/>
                    <GradientStop Color="#FFBEAB8A" Offset="1"/>
                </RadialGradientBrush>
            </Button.BorderBrush>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA0400D" Offset="1"/>
                    <GradientStop Color="#FFD7A856"/>
                    <GradientStop Color="#FFB06B1D" Offset="0.5"/>
                    <GradientStop Color="#FF9A4D06" Offset="0.5001"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <ListBox HorizontalAlignment="Left" Height="106" VerticalAlignment="Top" Width="147" Margin="434,13,0,0" ToolTip="Deletes Riot Logs older than 7 days">
            <CheckBox x:Name="WinUpdate" Content="Windows Update" ToolTip="Performs a Windows Update" Foreground="#FFB59214" Background="#FF38549E"/>
            <CheckBox x:Name="Clean" Content="Clean HDD" ToolTip="Cleans the hardrive from temporary garbage files" Foreground="#FFB59214" Background="#FF38549E"/>
            <CheckBox x:Name="Visual" Content="Visual Options" ToolTip="Change how Windows looks" Foreground="#FFB59214" Background="#FF38549E"/>
            <CheckBox x:Name="MouseHz_" Content="MouseHz+" ToolTip="Increases mouseHz to 500Hz, for a smoother mouse" Visibility="Hidden" Foreground="#FFB59214" Background="#FF38549E"/>
            <CheckBox x:Name="Riot_Logs" Content="Delete Old Logs" Checked="Deleteoldlogs_Checked" Foreground="#FFB59214" Background="#FF38549E"/>
        </ListBox>
        <Label x:Name="Label" Content="" HorizontalAlignment="Left" Margin="629,45.05,0,0" VerticalAlignment="Top" Width="31" RenderTransformOrigin="4.194,0.538" Background="#FF0A1A34" Foreground="#FFB59214"/>
        <ComboBox HorizontalAlignment="Left" Margin="594,18,0,0" VerticalAlignment="Top" Width="120" ToolTip="Select your server" SelectedIndex="1">
            <ComboBoxItem x:Name="EUW" Content="EUW" />
            <ComboBoxItem x:Name="NA" Content="NA" />
        </ComboBox>
        <Label x:Name="Label_Copy" Content="Ping:" HorizontalAlignment="Left" Margin="594,45.05,0,0" VerticalAlignment="Top" Width="35" Background="#FF0A1A34" Foreground="#FFB59214"/>
    </Grid>
</Window>