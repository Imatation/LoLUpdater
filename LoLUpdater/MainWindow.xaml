<Window x:Name="Window" x:Class="LoLUpdater.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="LoLUpdater" Height="156" Width="740" ResizeMode="NoResize">
    <Grid>
        <RadioButton x:Name="Patch" Content="Install" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top" Height="15" Width="94" ToolTip="Patches LoL with all the options" IsChecked="True"/>
        <RadioButton x:Name="Remove" Content="Uninstall" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Height="15" Width="104" ToolTip="Removes the patch"/>
        <ListBox x:Name="CheckedListBox" HorizontalAlignment="Left" Height="64" Margin="88,13,0,0" VerticalAlignment="Top" Width="341">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <CheckBox x:Name="AdobeAIR" Content="Adobe AIR.dll 14.0.0.125" ToolTip="Update for the PVP.NET Client" Checked="AdobeAIR_Checked"/>
            <CheckBox x:Name="Flash" Content="NPSWF32.dll 14.0.0.137" ToolTip="Update for the PVP.NET Client" Checked="Flash_Checked"/>
            <CheckBox x:Name="Cg" Content="cg.dll 3.1.0.13" ToolTip="Update for the Launcher and Game"/>
            <CheckBox x:Name="CgD3D9" Content="cgD3D9.dll 3.1.0.13" ToolTip="Update for the Launcher and Game"/>
            <CheckBox x:Name="CgGL" Content="cgGL.dll 3.1.0.13" ToolTip="Update for the Launcher and Game"/>
            <CheckBox x:Name="tbb" Content="tbb.dll 4.2.0.0" ToolTip="Update for the Game"/>
        </ListBox>
        <Button x:Name="OK" Content="OK" HorizontalAlignment="Left" Margin="0,88,0,0" VerticalAlignment="Top" Width="714" Click="OK_Click"/>
        <GroupBox Header="Main" HorizontalAlignment="Left" VerticalAlignment="Top" Height="87" Width="83" Margin="0,-4,0,0"/>
        <ListBox HorizontalAlignment="Left" Height="64" VerticalAlignment="Top" Width="143" Margin="438,13,0,0" ToolTip="Deletes Riot Logs older than 7 days">
            <CheckBox x:Name="WinUpdate" Content="Windows Update" Checked="WinUpdate_Checked" ToolTip="Performs a Windows Update"/>
            <CheckBox x:Name="Clean" Content="Clean HDD" ToolTip="Cleans the hardrive from temporary garbage files"/>
            <CheckBox x:Name="Visual" Content="Visual Options" ToolTip="Change how Windows looks"/>
            <CheckBox x:Name="MouseHz_" Content="MouseHz+" Checked="MouseHz__Checked" ToolTip="Increases mouseHz to 500Hz, for a smoother mouse" Visibility="Hidden"/>
            <CheckBox x:Name="Riot_Logs" Content="Delete Old Logs" Checked="Deleteoldlogs_Checked"/>
        </ListBox>
        <Label x:Name="Label" Content="" HorizontalAlignment="Left" Margin="629,32,0,0" VerticalAlignment="Top" Width="31" RenderTransformOrigin="4.194,0.538"/>
        <ComboBox HorizontalAlignment="Left" Margin="594,10,0,0" VerticalAlignment="Top" Width="120" ToolTip="Select your server">
            <ComboBoxItem Name="EUW" Content="EUW"/>
            <ComboBoxItem Name="NA" Content="NA"/>
        </ComboBox>
        <Button x:Name="ping" Content="Update ping" HorizontalAlignment="Left" Margin="594,58,0,0" VerticalAlignment="Top" Width="120" Click="ping_Click" ToolTip="Click here to update your ping"/>
        <Label x:Name="Label_Copy" Content="Ping:" HorizontalAlignment="Left" Margin="594,32,0,0" VerticalAlignment="Top" Width="35"/>
    </Grid>
</Window>