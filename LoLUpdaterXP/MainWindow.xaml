<Window x:Name="Window" x:Class="LoLUpdater.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="LoLUpdater" Height="123" Width="1559.669" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <RadioButton x:Name="Patch" Content="Patch" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top" Height="15" Width="94" ToolTip="Patches LoL with all the options" IsChecked="True"/>
        <RadioButton x:Name="Remove" Content="Remove Patch" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Height="15" Width="104" ToolTip="Removes the patch"/>
        <ListBox x:Name="CheckedListBox" HorizontalAlignment="Left" Height="64" Margin="114,1,0,0" VerticalAlignment="Top" Width="306">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <CheckBox x:Name="AdobeAIR" Content="Adobe AIR" ToolTip="Update for the PVP.NET Client" Checked="AdobeAIR_Checked"/>
            <CheckBox x:Name="AdobeAIRBeta" Content="Adobe AIR Beta" ToolTip="Beta update for the PVP.NET Client" Checked="AdobeAIRBeta_Checked"/>
            <CheckBox x:Name="Flash" Content="Adobe Flash" ToolTip="Update for the Launcher" Checked="Flash_Checked"/>
            <CheckBox x:Name="FlashBeta" Content="Adobe Flash Beta" ToolTip="Beta update for the Launcher" Checked="FlashBeta_Checked"/>
            <CheckBox x:Name="Cg" Content="cg.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Checked="Cg_Checked"/>
            <CheckBox x:Name="CgD3D9" Content="cgD3D9.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Checked="CgD3D9_Checked"/>
            <CheckBox x:Name="CgGL" Content="cgGL.dll 3.1.0.13" ToolTip="Update for the Launcher and Game" Checked="CgGL_Checked"/>
            <CheckBox x:Name="tbb" Content="tbb.dll 4.2.0.0" ToolTip="Update for the Game"/>
        </ListBox>
        <Button x:Name="OK" Content="OK" HorizontalAlignment="Left" Margin="0,70,0,0" VerticalAlignment="Top" Width="525" Click="OK_Click"/>
        <GroupBox Header="Main" HorizontalAlignment="Left" VerticalAlignment="Top" Height="64" Width="114"/>
        <Button x:Name="Clean" Content="CleanHDD" HorizontalAlignment="Left" Margin="425,10,0,0" VerticalAlignment="Top" Width="75" Click="Clean_Click"/>
        <CheckBox x:Name="Riot_Logs" Content="Delete old logs" HorizontalAlignment="Left" Margin="425,35,0,0" VerticalAlignment="Top" Checked="Deleteoldlogs_Checked"/>
        <Label x:Name="Label" Content="" HorizontalAlignment="Left" Margin="655,6,0,0" VerticalAlignment="Top" Width="31"/>
        <ComboBox HorizontalAlignment="Left" Margin="686,10,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Name="EUW" Content="EUW" IsSelected="True"/>
            <ComboBoxItem Name="NA" Content="NA"/>
        </ComboBox>
    </Grid>
</Window>